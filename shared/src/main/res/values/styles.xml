<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Dice" parent="@android:style/Widget.Material" />

    <style name="Widget.Dice.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Dice.EmptyResults">
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:drawableTop">@drawable/ic_no_data_40x40</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>


    <style name="Widget.Dice.ArtistTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.Dice.H1</item>
    </style>

    <!--Text stles -->
    <style name="TextAppearance.Dice.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <style name="Widget.Dice.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>